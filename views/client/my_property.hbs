{{> client_header}}
<div class="row1" id="all">
    <h2>My Properties</h2>
         {{#each results}}
    <div class="column">
     <div class="card">
        <img class="house" src="/assets/images/property/{{image}}">
      <h3>{{ project_name }}</h3>
      <p>Located in {{ location }}</p>
      <p style="color: green;">{{ category }} for  {{type}}</p>
      <p style="color: blue;">{{ remaining_units }} units remaining </p>
      {{#if type.rent}}
      <p>KES. {{ amount }} per month</p>
      {{else}}
      <p>KES. {{ amount }}</p>
      {{/if}}
      {{#if bedrooms}}
      <p>{{bedrooms}} bedrooms</p>
      {{else}}
      <p></p><p></p>
      {{/if}}
      <a style="background-color:blue" class="btn btn-success" href="/property_details?id={{property_id}}">More Details</a>
      <a class="btn btn-success" href="/client_edit_property?id={{property_id}}">Edit Property</a>
      <a style="background-color:red" class="btn btn-success" onclick="return confirm('Are you sure you want to delete this Property?')" href="/delete_property?id={{property_id}}" >Remove</a>
     </div>
    </div>
        
        {{/each}}
</div>