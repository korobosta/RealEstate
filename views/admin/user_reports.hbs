{{>admin_header}}
<script>
function printContent(el){
  var restorepage = document.body.innerHTML;
  var printcontent = document.getElementById(el).innerHTML;
  document.body.innerHTML = printcontent;
  window.print();
  document.body.innerHTML = restorepage;
}
</script>
<button ><a href="/user_reports">User Reports</a></button><button><a href="/property_reports">Property Reports</a></button><button><a href="/payment_reports">Payment Reports</a></button>

<h3>Filter Users</h3>
  <form method="post" action="/search_user"> 
    <label>Role</label>
    <select name="role">
      <option value="admin">Admin</option>
      <option value="staff">Staff</option>
      <option value="client">Client</option>
    </select>

    <label>Location</label>
    <select name="location"  id="cities"  >
                                            <option value="Nairobi">Nairobi</option>
                                            <option value="Kisumu">Kisumu</option>
                                            <option value="Mombasa">Mombasa</option>
                                            <option value="Nakuru">Nakuru</option>
                                            <option value="Naivasha">Naivasha</option>
                                            <option value="Kakamega">Kakamega</option>
                                            <option value="Busia">Busia</option>
                                            <option value="Kajiado">Kajiado</option>
                                            <option value="Kiambu">Kiambu</option>
                                            <option value="Other">Other</option>
                    </select>

    <label>Registered Between</label><input type="date" name="bt1" min="0" required> and <input type="date" name="bt2" required >
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
  <div class="button">
    <button onclick="printContent('div1')">Print</button>
  </div>
<div id="div1">
<table class="table table-striped">
<h2>Users</h2>
  <thead>
    <tr>
      <th scope="col">S/N</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Location</th>
      <th scope="col">Registration_date</th>
      <th scope="col">Phone</th>
    </tr>
  </thead>
  <tbody>
  
    {{#each users}}
    <tr> 
      <th scope="row">{{@index}} </th>
      <td>{{full_name}}</td>
      <td>{{email}}</td>
      <td>{{location}}</td>
      <td>{{registration_date}}</td>
      <td>{{phone}}</td>
      <!--
      <td><a class="btn btn-success" href="/admin_edit_user?id={{user_id}}">Edit</a></td>
      <td><a style="background-color:red" class="btn btn-success" onclick="return confirm('Are you sure you want to delete this User?')" href="/delete_user?id={{user_id}}" >Delete</a></td>
      -->
    </tr>
   {{/each}}
    
  </tbody>

</table>
</div>





