{{>admin_header}}
<script>
function printContent(el){
  var restorepage = document.body.innerHTML;
  var printcontent = document.getElementById(el).innerHTML;
  document.body.innerHTML = printcontent;
  window.print();
  document.body.innerHTML = restorepage;
}
</script>
<button ><a href="/user_reports">User Reports</a></button><button><a href="/property_reports">Property Reports</a></button><button><a href="/payment_reports">Payment Reports</a></button>
<h3>Filter Properties</h3>
  <form method="post" action="/admin_search_property"> 
    <label>Category</label>
    <select name="category">
      <option value="house">House</option>
      <option value="office">Office</option>
      <option value="land">Land</option>
    </select>

    <label>Type</label>
    <select name="type">
      <option value="rent">Rent</option>
      <option value="sale">Sale</option>
      <option value="lease">Lease</option>
    </select>

    <label>Location</label>
    <select name="location"  id="cities"  >
                                            <option value="Nairobi">Nairobi</option>
                                            <option value="Kisumu">Kisumu</option>
                                            <option value="Mombasa">Mombasa</option>
                                            <option value="Nakuru">Nakuru</option>
                                            <option value="Naivasha">Naivasha</option>
                                            <option value="Kakamega">Kakamega</option>
                                            <option value="Busia">Busia</option>
                                            <option value="Kajiado">Kajiado</option>
                                            <option value="Kiambu">Kiambu</option>
                                            <option value="Other">Other</option>
                    </select>

    <label>Uploaded Between</label><input type="date" name="bt1" min="0" required> and <input type="date" name="bt2" required >
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
  <div class="button">
    <button onclick="printContent('div2')">Print</button>
  </div>
  <div id="div2">
<table  class="table table-striped">
<h2>Properties</h2>
  <thead>
    <tr>
      <th scope="col">S/N</th>
      <th scope="col">Image</th>
      <th scope="col">Property Name</th>
      <th scope="col">Uploaded By</th>
      <th scope="col">Location</th>
      <th scope="col">Uploaded on</th>
      <th scope="col">Amount</th>
      <th scope="col">Category</th>
    </tr>
  </thead>
  <tbody>
  
    {{#each properties}}
    <tr> 
      <th scope="row">{{@index}} </th>
      <td><img class="house" src="/assets/images/property/{{image}}"></td>
      <td>{{property_name}}</td>
      <td>{{full_name}}</td>
      <td>{{location}}</td>
      <td>{{date_uploaded}}</td>
      <td>{{amount}}</td>
      <td>{{category}} for {{type}}</td>
      <!--
      <td><a class="btn btn-success" href="/admin_edit_property?id={{property_id}}">Edit Property</a></td>
      <td> <a style="background-color:red" class="btn btn-success" onclick="return confirm('Are you sure you want to delete this Property?')" href="/delete_property?id={{property_id}}" >Delete</a></td>
      -->
    </tr>
   {{/each}}
    
  </tbody>

</table>
</div>