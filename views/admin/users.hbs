<style type="text/css">
  h2{
    color: blue;
  }
  thead{
    color: green;
  }
  a {
  text-decoration: none;
}
</style>
{{> admin_header}}
<table class="table table-striped">
<a class="btn btn-success" href="/admin_add_user">Add User</a>
<h2>All Users</h2>
  <thead>
    <tr>
      <th scope="col">S/N</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Location</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
     
    <tr>
        
      <th scope="row">{{@index}} </th>
      <td>{{full_name}}</td>
      <td>{{email}}</td>
      <td>{{location}}</td>
      <td>{{phone}}</td>
      <td><a class="btn btn-success" href="/admin_edit_user?id={{user_id}}">Edit</a></td>
      <td><a style="background-color:red" class="btn btn-success" onclick="return confirm('Are you sure you want to delete this User?')" href="/delete_user?id={{user_id}}" >Delete</a></td>
    </tr>
   {{/each}}
    
  </tbody>

</table>