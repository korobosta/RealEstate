<style type="text/css">
  h2{
    color: blue;
  }
  thead{
    color: green;
  }
  a {
  text-decoration: none;
}
</style>
{{> staff_header}}
<table class="table table-striped">
<a class="btn btn-success" href="/staff_add_client">Add Client</a>
<h2>All Clients</h2>
  <thead>


    <tr>
      <th scope="col">S/N</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Location</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each clients}}
     
    <tr>
        
      <th scope="row">{{@index}} </th>
      <td>{{full_name}}</td>
      <td>{{email}}</td>
      <td>{{location}}</td>
      <td>{{phone}}</td>
      <td><a class="btn btn-success" href="/staff_edit_client?id={{user_id}}">Edit</a></td>
    </tr>
   {{/each}}
    
  </tbody>

</table>