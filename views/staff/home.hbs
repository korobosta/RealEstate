<style type="text/css">
  h2{
    color: blue;
  }
  thead{
    color: green;
  }
  a {
  text-decoration: none;
}
</style>
{{> staff_header}}
<div class="row1" id="all">
    <h2>Latest Properties</h2>
         {{#each results}}
    <div class="column">
     <div class="card">
      <img class="house" src="/assets/images/property/{{image}}">
      <h3>{{ project_name }}</h3>
      <p>Located in {{ location }}</p>
      <p style="color: green;">{{ category }} for  {{type}}</p>
      <p style="color: blue;">{{ remaining_units }} units remaining </p>
      {{#if type.rent}}
      <p>KES. {{ amount }} per month</p>
      {{else}}
      <p>KES. {{ amount }}</p>
      {{/if}}
      {{#if bedrooms}}
      <p>{{bedrooms}} bedrooms</p>
      {{else}}
      <p></p><p></p>
      {{/if}}
      <a class="btn btn-success" href="/staff_edit_property?id={{property_id}}">Edit Property</a>
     </div>
    </div>
        
        {{/each}}
  </div>


 
<br><a class="btn btn-success" href="staff_property">See more properties</a><br><br><br> 

<table class="table table-striped">
<h2>Clients</h2>
  <thead>


    <tr>
      <th scope="col">S/N</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Location</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each clients}}
     
    <tr>
        
      <th scope="row">{{@index}}</th>
      <td>{{full_name}}</td>
      <td>{{email}}</td>
      <td>{{location}}</td>
      <td>{{phone}}</td>
      <td><a class="btn btn-success" href="/staff_edit_client?id={{user_id}}">Edit</a></td>
    </tr>
   {{/each}}
    
  </tbody>

</table>
<a class="btn btn-success" href="/staff_clients">See more clients</a>
